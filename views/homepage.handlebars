<link rel="stylesheet" href="./css/homepage.css">

<div class="home-content">
    {{#each posts as |post|}}
    <div class="post li" id={{post.id}}>
        <div class="post-header">
            <h3>{{post.title}}</h3>
            <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
        </div>
        <p>{{post.content}}</p>
    </div>
    {{/each}}

<script src="./js/homepage.js"></script>
